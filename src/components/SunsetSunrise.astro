<style>
  main {
    --sun-size: 52vmin;
    --g: linear-gradient(to bottom, #000, #000);
    display: grid;
    place-items: center;
    height: 200vh;
    background-color: #151a46;
    -webkit-animation: sky 1s linear forwards;
    animation: sky 1s linear forwards;
    animation-timeline: scroll();
  }

  .scroll {
    position: fixed;
    right: 1rem;
    bottom: 1rem;
    padding: 0.5em;
    border-radius: 0.5em;
    font-family: sans-serif;
    background-color: #fff;
  }

  .floor {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: calc((100vh - var(--sun-size)) / 2);
    background: linear-gradient(0deg, black, #16336a) #16336a no-repeat;
    -webkit-animation: floor 1s linear forwards;
    animation: floor 1s linear forwards;
    animation-timeline: scroll();
  }

  .sun {
    position: fixed;
    top: 50%;
    left: 50%;
    width: var(--sun-size);
    aspect-ratio: 1/1;
    border-radius: 50%;
    translate: -50% -50%;
    -webkit-animation: sun 1s linear forwards;
    animation: sun 1s linear forwards;
    animation-timeline: scroll();
  }
  .sun .face {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: inherit;
  }
  .sun .face--back {
    opacity: 0;
    box-shadow: 0 0 calc(var(--sun-size) / 5) #eee268;
    -webkit-animation: sun-back 1s linear forwards;
    animation: sun-back 1s linear forwards;
    animation-timeline: scroll();
  }
  .sun .face--front {
    -webkit-mask: var(--g) 0 0/100% 38% , var(--g) 0 41%/100% 5.2% , var(--g) 0 47.5%/100% 4.8% , var(--g) 0 54%/100% 4.4% , var(--g) 0 60.5%/100% 4% , var(--g) 0 67%/100% 3.6% , var(--g) 0 73.5%/100% 3.2% , var(--g) 0 80%/100% 2.8% , var(--g) 0 86.5%/100% 2.4%;
