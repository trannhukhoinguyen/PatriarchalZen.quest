    -webkit-mask-repeat: no-repeat;
    mask-repeat: no-repeat;
    background-image: linear-gradient(180deg, #eee268 0%, #ff1fae 100%);
    background-image: linear-gradient(180deg in oklab, #eee268 0%, #ff1fae 100%);
    background-color: #eee268;
    background-repeat: no-repeat;
    -webkit-animation: sun-front 1s linear forwards;
    animation: sun-front 1s linear forwards;
    animation-timeline: scroll();
  }
  .sun--reflect {
    rotate: 180deg;
    transform-origin: bottom center;
    -webkit-animation: reflect 1s linear forwards;
    animation: reflect 1s linear forwards;
    animation-timeline: scroll();
    filter: blur(1vw);
    scale: 1 0.5;
    opacity: 0.3;
  }

  @-webkit-keyframes sun {
    from {
      translate: -50% -50%;
      scale: 1;
    }
    50% {
      translate: -50% -75%;
    }
    to {
      translate: -100% -125%;
      scale: 0.25;
    }
  }

  @keyframes sun {
    from {
      translate: -50% -50%;
      scale: 1;
    }
    50% {
      translate: -50% -75%;
    }
    to {
      translate: -100% -125%;
      scale: 0.25;
    }
  }
  @-webkit-keyframes reflect {
    from {
      translate: -50% -50%;
      scale: 1 0.5;
      filter: blur(1vw);
    }
    50% {
      translate: -50% -40%;
    }
    to {
      translate: -100% -35%;
      scale: 0.25 0.12;
      filter: blur(5vw);
    }
  }
  @keyframes reflect {
    from {
      translate: -50% -50%;
      scale: 1 0.5;
      filter: blur(1vw);
    }
    50% {
      translate: -50% -40%;
    }
    to {
      translate: -100% -35%;
      scale: 0.25 0.12;
      filter: blur(5vw);
    }
  }
  @-webkit-keyframes sun-back {
    0%, 50% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
  @keyframes sun-back {
    0%, 50% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
  @-webkit-keyframes sun-front {
    to {
      -webkit-mask: var(--g) 0 0/100% 38% , var(--g) 0 41%/100% 20% , var(--g) 0 54%/100% 20% , var(--g) 0 67%/100% 20% , var(--g) 0 80%/100% 20% , var(--g) 0 93%/100% 20% , var(--g) 0 106%/100% 20% , var(--g) 0 119%/100% 20% , var(--g) 0 132%/100% 20%;
      mask: var(--g) 0 0/100% 38% , var(--g) 0 41%/100% 20% , var(--g) 0 54%/100% 20% , var(--g) 0 67%/100% 20% , var(--g) 0 80%/100% 20% , var(--g) 0 93%/100% 20% , var(--g) 0 106%/100% 20% , var(--g) 0 119%/100% 20% , var(--g) 0 132%/100% 20%;
      background-position: 0 var(--sun-size);
    }
  }
  @keyframes sun-front {
    to {
      -webkit-mask: var(--g) 0 0/100% 38% , var(--g) 0 41%/100% 20% , var(--g) 0 54%/100% 20% , var(--g) 0 67%/100% 20% , var(--g) 0 80%/100% 20% , var(--g) 0 93%/100% 20% , var(--g) 0 106%/100% 20% , var(--g) 0 119%/100% 20% , var(--g) 0 132%/100% 20%;
      mask: var(--g) 0 0/100% 38% , var(--g) 0 41%/100% 20% , var(--g) 0 54%/100% 20% , var(--g) 0 67%/100% 20% , var(--g) 0 80%/100% 20% , var(--g) 0 93%/100% 20% , var(--g) 0 106%/100% 20% , var(--g) 0 119%/100% 20% , var(--g) 0 132%/100% 20%;
      background-position: 0 var(--sun-size);
    }
  }
  @-webkit-keyframes sky {
    to {
      background-color: #7aaadb;
    }
  }
  @keyframes sky {
    to {
      background-color: #7aaadb;
    }
  }
  @-webkit-keyframes floor {
    from {
      filter: brightness(100%);
      background-size: 100% 100%;
    }
    to {
      filter: brightness(300%);
      background-size: 100% 200%;
    }
  }
  @keyframes floor {
    from {
      filter: brightness(100%);
      background-size: 100% 100%;
    }
    to {
      filter: brightness(300%);
      background-size: 100% 200%;
    }
  }
